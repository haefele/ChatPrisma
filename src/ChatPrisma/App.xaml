<Application x:Class="ChatPrisma.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             ShutdownMode="OnExplicitShutdown"
             Startup="App_OnStartup"
             Exit="App_OnExit"
             DispatcherUnhandledException="App_OnDispatcherUnhandledException">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Themes/WindowStyles.xaml" />
                <ResourceDictionary Source="/Themes/GroupBoxStyles.xaml" />
                <ResourceDictionary Source="/Themes/HyperlinkStyles.xaml" />
                <ResourceDictionary Source="/Themes/ToolTipStyles.xaml" />
                <ResourceDictionary Source="/Themes/ContextMenuStyles.xaml" />
                <ResourceDictionary Source="/Themes/ButtonStyles.xaml" />
                <ResourceDictionary Source="/Themes/TextBoxStyles.xaml" />
                <ResourceDictionary Source="/Themes/ScrollBarStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
